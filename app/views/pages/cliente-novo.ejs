<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="css/estilo.css">
</head>
<body>


    
    <% 
    let cssErros = {nome: "",  cep: "", nomeUsuario: "", email: "", senha: "", tipo: "", status: ""};
    let msgErros = {nome: "",  cep: "", nomeUsuario: "", email: "", senha: "", tipo: "", status: ""}; 
      
    let valores = {nome_usuario: "",  cep_usuario: "", nomeUsuario_usuario: "", email_usuario: "", senha_usuario: "", tipo_usuario: "", status_usuario: ""}
    
    if(listaErros){
        listaErros.errors.forEach(function (elemento){
            if(elemento.path == "nome"){
                cssErros.nome = "erro-form";
                msgErros.nome = elemento.msg;
            }

            if(elemento.path == "cep"){
                cssErros.cep = "erro-form";
                msgErros.cep = elemento.msg;
            }

            if(elemento.path == "nomeUsuario"){
                cssErros.nomeUsuario = "erro-form";
                msgErros.nomeUsuario = elemento.msg;
            }
     
            if(elemento.path == "email"){
                cssErros.email = "erro-form";
                msgErros.email = elemento.msg;
            }
     

           
            if(elemento.path == "senha"){
                cssErros.senha = "erro-form";
                msgErros.senha = elemento.msg;
            }

            if(elemento.path == "tipo"){
                cssErros.tipo = "erro-form";
                msgErros.tipo = elemento.msg;
            }
            if(elemento.path == "status"){
                cssErros.status =  "erro-form";
                msgErros.status = elemento.msg;
            }
     
            
        });
    }
    %>
    <!-- <div class="navbar navbar-inverse navbar-fixed-top"> -->
    <div class="navbar navbar-inverse ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="adm" class = "navbar-brand"><span class="material-symbols-outlined">
                    home
                    </span></a>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/adm-cliente">Clientes</a></li>
                    <li><a>Quartos</a></li>
                    <li><a>Reservas</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <h2>Novo cliente</h2>

<form action="/adm/cliente-novo" method="post">

<div class="form-horizontal">
    <hr />
    <div class="form-group">

        <label for="nome" class = "control-label col-md-2">Nome</label>
        <div class="col-md-10">
            <input class = "form-control" type="text" name="nome" id="nome" value="<%= valores.nome%>">
            <span class="<%= cssErros.nome %>"> <%= msgErros.nome %></span>
        </div>

    </div>
    
    <div class="form-group">
        <label for="cep" class = "control-label col-md-2">CEP</label>
        <div class="col-md-10">
            <input  class = "form-control" type="text" name="cep" id="cep" value="<%= valores.cep%>">            
            <span class="<%= cssErros.cep %>"> <%= msgErros.cep %></span>
        </div>
    </div>
    
    <div class="form-group" style="display:flex">
        <label for="" class = "control-label col-md-2">Imagem Perfil</label>
        <div class="col-md-5">
            <input  class = "form-control" type="file" name="ImagemPerfil" id="ImagemPerfil">    
        </div>
        <img id="img-preview" src="imagem/img_login.png" style="max-width:80px; max-height:80px;"/>
    </div>
    
    <div class="form-group">
        <label for="nomeUsuario" class = "control-label col-md-2">Nome de Usu√°rio</label>
        <div class="col-md-10">
            <input  class = "form-control"type="text" name="nomeUsuario" id="nomeUsuario" value="<%= valores.nomeUsuario%>">  
            <span class="<%= cssErros.nomeUsuario %>"> <%= msgErros.nomeUsuario %></span>
        </div>
    </div>
    
    <div class="form-group">
        <label for="email" class = "control-label col-md-2">E-mail</label>
        <div class="col-md-10">
            <input  class = "form-control"type="text" name="email" id="email" value="<%= valores.email%>">  
            <span class="<%= cssErros.email %>"> <%= msgErros.email %></span>
        </div>
    </div>
    
    <div class="form-group">
        <label for="senha" class = "control-label col-md-2">Senha</label>
        <div class="col-md-10">
            <input  class = "form-control" type="password" name="senha" id="senha" value="<%= valores.senha%>">  
            <span class="<%= cssErros.senha %>"> <%= msgErros.senha %></span>
         </div>
    </div>
    
    <div class="form-group">
        <label for="tipo" class = "control-label col-md-2">Tipo Usuario</label>
        <div class="col-md-10">
           <select name="tipo" id="tipo"  class = "form-control" value="<%= valores.tipo%>">
                <option value="1">Comum</option>
                <option value="2">Gerente</option>
           </select>
        </div>
    </div>
    
    <div class="form-group">
        <label for="status" class = "control-label col-md-2">Status</label>
        <div class="col-md-10">
            <select   class = "form-control" name="status" id="status" value="<%= valores.status%>">
                <option value="1">Ativo</option>
                <option value="0">Inativo</option>
           </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar" class="btn btn-success" />
        </div>
    </div>
</div>
</form>

<div>
    <a class="btn btn-primary btn-lg" href="/adm/adm-cliente" role="button">voltar</a>

</div>

        <hr />
        <footer>
            <p>&copy;2023 - Hotel IceTown</p>
        </footer>
    </div>
</body>
</html>